@{
    ViewBag.Title = "Email Templates";
    var emailTemplates = ViewBag.EmailTemplates as List<EmailTemplateApp.Models.EmailTemplate>;
}

<h2>Select a Purpose</h2>

<select id="emailTemplateDropdown">
    @if (emailTemplates != null)
    {
        foreach (var template in emailTemplates)
        {
                    <option value="@template.Content">@template.Name</option>
        }
    }
</select>

<h2>Reference Sample</h2>

<textarea id="emailTemplateBody" readonly>@(emailTemplates != null && emailTemplates.Any() ? emailTemplates.FirstOrDefault()?.Content ?? "" : "")</textarea>

<button onclick="copyToClipboard()">Copy to Clipboard</button>

<script src="~/Scripts/copyToClipboard.js"></script>
